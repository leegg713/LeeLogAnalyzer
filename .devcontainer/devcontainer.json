// Dev container for PowerShell development with Python support and VS Code tooling
{
  "name": "PowerShell Dev Container",
  "image": "mcr.microsoft.com/powershell:latest",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.powershell",
        "ms-vscode.powershell-preview",
        "ms-python.python"
      ]
    }
  },
  "containerEnv": {
    "GMAIL_USERNAME": "${{ secrets.GMAIL_USERNAME }}",
    "GMAIL_PASSWORD": "${{ secrets.GMAIL_PASSWORD }}"
  },
  "postCreateCommand": "pwsh -Command 'Install-Module -Name PSScriptAnalyzer -Force -Scope CurrentUser'"
}